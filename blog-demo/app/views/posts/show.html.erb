<h4 class='d-flex justify-content-between mb-4'>
  <span>Details</span>
  <%= link_to 'Back', posts_path, class: 'btn btn-danger btn active' %>
</h4>



<div class="card">
  <div class="card-body">
    <p id="notice"><%= notice %></p>

    <p>
      <div class="card-title">
        <strong>Title:</strong>
      </div>
      
      <div class="card-description">
        <%= @post.title %>
      </div>
    </p>


    <p>
      <div class="card-title mt-5">
        <strong>Description:</strong>
      </div>

      <div class="card-description">
        <%= @post.description %>
      </div>
    </p>


    <p>
      <div class="card-title mt-5">
        <strong>Published at:</strong>
      </div>

      <div class="card-description">
        <%= @post.published_at %>
      </div>
    </p>
    
    <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-success btn-block btn active' %> 
  </div>
</div>