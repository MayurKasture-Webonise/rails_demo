<h4 class='d-flex justify-content-between mb-4'>
  <span style="font-weight:bold">Blog Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary btn active' %>
</h4>

<table class="mt-4 table table-bordered table-dark">
  <thead class="text-center">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Published at</th>
      <th>Action-1</th>
      <th>Action-2</th>
      <th>Action-3</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.published_at %></td>
        <td><button><%= link_to 'Show', post %></button></td>
        <td><button><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
